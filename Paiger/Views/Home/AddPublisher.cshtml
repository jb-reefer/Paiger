@{
    ViewData["Title"] = "AddPublisher";
}

<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Publisher">
    <div class="form-group">
        <div class="col-md-10">
            <p>Publisher image/icon:</p>
            <input type="file" name="files" />
        </div>
    </div>
    <label for="publisherName">Publisher Name:</label>
    <input id="publisherName" />
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>